.include <bsd.own.mk>

RUMPKERNCOMPS=	crypto tty z

.if ${MACHINE_ARCH} == "i386" || \
    ${MACHINE_ARCH} == "x86_64" || \
    ${MACHINE_ARCH} == "sparc"
RUMPKERNCOMPS+=	sljit
.endif

.if ${MKZFS} != "no"
RUMPKERNCOMPS+=    solaris
.endif

.for var in ${RUMPKERNCOMPS}
RUMPKERNLIBS+=lib${var}
RUMPKERNLDADD+=-lrumpkern_${var}
.endfor
